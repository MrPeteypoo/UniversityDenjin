{
	"name": "denjin",
	"description": "A 3D game engine.",
	"license": "MIT",
	
	"authors": ["Simon Peter Campbell"],
	"copyright": "Copyright Â© 2017, Simon Peter Campbell",

	"homepage": "https://github.com/storm20200/Denjin",

	"targetType": "executable",
	"targetName": "denjin",
	"targetPath": "builds/unsupported",
	"mainSourceFile": "source/main.d",

	"subPackages": [
		"./packages/maths/",
		"./packages/misc/",
		"./packages/rendering/",
		"./packages/window/"
	],

	"dependencies": {
		"denjin:maths": "*",
		"denjin:misc": "*",
		"denjin:rendering": "*",
		"denjin:window": "*"
	},

	"importPaths": [
		"source"
	],

	"configurations": [
		{
			"name": "windows",
			"platforms": ["windows"],
			"targetPath": "builds/windows"
		},
		{
			"name": "linux",
			"platforms": ["linux"],
			"targetPath": "builds/linux"
		}
	],

	"buildRequirements": [
		"allowWarnings",
		"disallowDeprecations"
	],

	"buildTypes": {
		"optimized": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo"],
			"version": [ "optimized" ]
		},

		"optimized-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo", "unittests"],
			"version": [ "optimized" ]
		},

		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		}
	},

	"copyFiles": ["content/all/*"],
	"copyFiles-windows-x86": ["content/win-x86/*"],
	"copyFiles-windows-x86_64": ["content/win-x86_64/*"],
	"copyFiles-linux-x86": ["content/linux-x86/*"],
	"copyFiles-linux-x86_64": ["content/linux-x86_64/*"]
}