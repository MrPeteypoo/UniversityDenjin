{
	"name": "denjin",
	"description": "A 3D game engine.",
	"license": "MIT",
	
	"authors": ["Simon Peter Campbell"],
	"copyright": "Copyright Â© 2017, Simon Peter Campbell",

	"homepage": "https://github.com/storm20200/Denjin",

	"targetName": "denjin",
	"targetType": "library",
	"targetPath": "builds",
	"workingDirectory":"builds",
	
	"subPackages": [
		"./packages/assets/",
		"./packages/maths/",
		"./packages/misc/",
		"./packages/rendering/",
		"./packages/scene/",
		"./packages/window/"
	],

	"dependencies": {
		"denjin:assets": "*",
		"denjin:maths": "*",
		"denjin:misc": "*",
		"denjin:rendering": "*",
		"denjin:scene": "*",
		"denjin:window": "*"
	},

	"-ddoxFilterArgs": [
		"--min-protection=Private", 
		"--in=denjin",
		"--ex=erupted",
		"--ex=derelict",
		"--ex=imageformats"
	],

	"buildRequirements": [ "allowWarnings" ],

	"buildTypes": {
		"optimized": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo"],
			"version": ["optimized"]
		},

		"unittest-optimized": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo", "unittests"],
			"version": ["optimized"]
		}
	},
	
	"copyFiles": ["content/all/models", "content/all/textures"]
}
