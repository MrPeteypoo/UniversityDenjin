{
	"name": "denjin",
	"description": "A 3D game engine.",
	"license": "MIT",
	
	"authors": ["Simon Peter Campbell"],
	"copyright": "Copyright Â© 2016, Simon Peter Campbell",

	"homepage": "https://github.com/storm20200/Denjin",

	"targetType": "library",
	"targetName": "denjin",
	"targetPath": "builds/unsupported",	

	"importPaths": [
		"source",
		"external"
	],

	"sourcePaths": [
		"external/glad"
	],

	"configurations": [
		{
			"name": "windows",
			"platforms": ["windows"],
			"targetPath": "builds/windows"

		},
		{
			"name": "osx",
			"platforms": ["osx"],
			"targetPath": "builds/osx"
		},
		{
			"name": "linux",
			"platforms": ["linux"],
			"libs-linux": ["dl"],
			"targetPath": "builds/linux"
		}
	],

	"buildRequirements": [
		"allowWarnings",
		"disallowDeprecations"
	],

	"buildTypes": {		
		"optimized": {
			"buildOptions": ["releaseMode", "optimize", "inline", "debugInfo"]
		},

		"optimized-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo", "unittests"]
		},

		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		},

		"release-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "noBoundsCheck", "unittests"]
		}
	}
}