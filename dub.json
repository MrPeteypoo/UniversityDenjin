{
	"name": "denjin",
	"description": "A 3D game engine.",
	"license": "MIT",
	
	"authors": ["Simon Peter Campbell"],
	"copyright": "Copyright Â© 2016, Simon Peter Campbell",

	"homepage": "https://github.com/storm20200/Denjin",

	"targetType": "library",
	"targetName": "denjin",
	"targetPath": "builds/unsupported",	

	"dependencies": {
		"erupted": "~>1.4.6",
		"derelict-glfw3": "~>3.1.0"
	},

	"importPaths": [
		"source",
		"external"
	],

	"configurations": [
		{
			"name": "windows",
			"platforms": ["windows"],
			"targetPath": "builds/windows",
			"preGenerateCommands-x86": ["$PACKAGE_DIR\\scripts\\build-glfw-windows.bat 32"],
			"preGenerateCommands-x86_64": ["$PACKAGE_DIR\\scripts\\build-glfw-windows.bat 64"]
		},
		{
			"name": "linux",
			"platforms": ["linux"],
			"libs-linux": ["dl"],
			"targetPath": "builds/linux",
			"preGenerateCommands-x86": ["$PACKAGE_DIR/scripts/build-glfw-linux.sh x86"],
			"preGenerateCommands-x86_64": ["$PACKAGE_DIR/scripts/build-glfw-linux.sh x86_64"]
		}
	],

	"buildRequirements": [
		"allowWarnings",
		"disallowDeprecations"
	],

	"buildTypes": {		
		"optimized": {
			"buildOptions": ["releaseMode", "optimize", "inline", "debugInfo"]
		},

		"optimized-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo", "unittests"]
		},

		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		},

		"release-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "noBoundsCheck", "unittests"]
		}
	},

	"copyFiles": ["content/all/*"],
	"copyFiles-windows-x86": ["content/win32/*"],
	"copyFiles-windows-x86_64": ["content/win64/*"],
	"copyFiles-linux-x86": ["content/linux32/*"],
	"copyFiles-linux-x86_64": ["content/linux64/*"]	
}