{
	"name": "rendering",
	"description": "Rendering systems for Denjin.",

	"targetType": "library",
	"targetName": "denjin-rendering",
	"targetPath": "builds/unsupported",

	"dependencies": {
		"erupted": "~>1.5.2"
	},

	"configurations": [
		{
			"name": "windows",
			"platforms": ["windows"],
			"targetPath": "builds/windows"
		},
		{
			"name": "linux",
			"platforms": ["linux"],
			"targetPath": "builds/linux"
		}
	],

	"buildRequirements": [
		"allowWarnings",
		"disallowDeprecations"
	],

	"buildTypes": {
		"debug": {
			"debugVersions": [ "Debug" ]
		},

		"unittest": {
			"debugVersions": [ "Debug" ]
		},

		"optimized": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo"],
			"debugVersions": [ "Optimized" ],
			"versions": [ "Optimized" ]
		},

		"optimized-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo", "unittests"],
			"debugVersions": [ "Optimized" ],
			"versions": [ "Optimized" ]
		},

		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		},

		"release-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "noBoundsCheck", "unittests"]
		}
	}
}