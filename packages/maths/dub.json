{
	"name": "maths",
	"description": "Mathematics library for Denjin.",

	"targetName": "denjin-maths",
	"targetType": "library",
	"targetPath": "builds",

	"dependencies": {
		"denjin:misc": "*"
	},

	"buildRequirements": [
		"allowWarnings",
		"disallowDeprecations"
	],

	"buildTypes": {
		"optimized": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo"],
			"version": [ "optimized" ]
		},

		"optimized-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo", "unittests"],
			"version": [ "optimized" ]
		},

		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		}
	}
}