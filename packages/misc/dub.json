{
	"name": "misc",
	"description": "A collection of miscellaneous functionality used by Denjin.",

	"targetName": "denjin-misc",
	"targetType": "library",
	"targetPath": "builds",

	"buildRequirements": [
		"allowWarnings",
		"disallowDeprecations"
	],

	"buildTypes": {
		"optimized": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo"],
			"version": [ "optimized" ]
		},

		"optimized-unittest": {
			"buildOptions": ["debugMode", "optimize", "inline", "debugInfo", "unittests"],
			"version": [ "optimized" ]
		},

		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
		}
	}
}